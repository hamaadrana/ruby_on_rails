<h1 style="text-align: center" id="topMargin">Users</h1>

<div class="justify-content-md-center">


  <% @users.each do |user| %>

      <div class="row">
        <div class="col-md-12">

    <% if logged_in? %>


              <% if (user.email === current_user.email || current_user.admin?) %>


                  <%= link_to user_path(user) do %>

                      <div class="alert alert-dark" role="alert">
                        <%= user.username  %>
                        <span style="margin-left: 90%"><%= gravatar_for user%></span>
                        <hr>
                        <% if logged_in? && current_user.admin? %>

                            <%= link_to "Delete this User", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user and all articles?"} %>

                        <% end %>

                      </div>
                  <% end %>
              <% else %>

                  <div class="alert alert-dark" role="alert">
                    <%= user.username  %>
                    <span style="margin-left: 90%"><%= gravatar_for user%></span>
                    <hr>
                    <% if logged_in? && current_user.admin? %>

                        <%= link_to "Delete this User", users_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user and all articles?"} %>

                    <% end %>

                  </div>

              <% end %>

          <% else %>
              <div class="alert alert-dark" role="alert">
                <%= user.username  %>
                <span style="margin-left: 90%"><%= gravatar_for user%></span>
                <hr>
                <% if logged_in? && current_user.admin? %>

                <%= link_to "Delete this User", users_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user and all articles?"} %>

                <% end %>

              </div>

          <% end %>










        </div>
      </div>


      <% end %>

</div>